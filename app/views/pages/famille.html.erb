<% content_for(:after_js) do %>
  <script>
    $(document).ready(function() {
      var familleMenuTop = $("#famille-menu-scrollspy").position()['top'];
      $(window).scroll(function(){
        $("#famille-menu-scrollspy").css("top", Math.max(80, familleMenuTop - $(this).scrollTop()));
        if ($('#couple').isOnScreen()) {
          $('.table-of-contents a').removeClass('active');
          $('.table-of-contents a[data-link="#couple"').addClass('active');
        };
        if ($('#succession').isOnScreen()) {
          $('.table-of-contents a').removeClass('active');
          $('.table-of-contents a[data-link="#succession"').addClass('active');
        };
        if ($('#transmission').isOnScreen()) {
          $('.table-of-contents a').removeClass('active');
          $('.table-of-contents a[data-link="#transmission"').addClass('active');
        };
        if ($('#adoption').isOnScreen()) {
          $('.table-of-contents a').removeClass('active');
          $('.table-of-contents a[data-link="#adoption"').addClass('active');
        };
      });
    })
  </script>
<% end %>
