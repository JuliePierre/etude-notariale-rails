<!-- Les meta tags -->
<% content_for :meta_title, "Négociation immobilière - Annonces à Rennes | Perraut Pirioux Mevel" %>
<% content_for :meta_description, "L'office Perraut Pirioux Mevel vous accompagne dans vos démarches immobilières : achat immobilier ou vente immobilière." %>
<% content_for :meta_image, "https://unsplash.com/?photo=P3pI6xzovu0" %>
<!-- Les meta tags -->

<div id="negociation-banner">
  <div class="negociation-choice-container">
    <div class="immobilier-redirection-card couple-redirection-card">
      <%= link_to '', annonces_path, class: 'immobilier-redirection-card-link' %>
      <span class="line-title immobilier-redirection-card-line-title"></span>
      <p>Négociation immobilière</p>
      <div>
        <span class="immobilier-redirection-card-title">J'achète</span>
        <span class="immobilier-redirection-card-icon"><%= image_tag 'icone-achat.png' %></span>
      </div>
    </div>
    <div class="immobilier-redirection-card couple-redirection-card">
      <%= link_to '', vente_path, class: 'immobilier-redirection-card-link' %>
      <span class="line-title immobilier-redirection-card-line-title"></span>
      <p>Négociation immobilière</p>
      <div>
        <span class="immobilier-redirection-card-title">Je vends</span>
        <span class="immobilier-redirection-card-icon"><%= image_tag 'icone-vente.png' %></span>
      </div>
    </div>
  </div>
</div>


<%= content_for(:after_js) do %>
  <script>
    $(document).ready(function(){
      $('.navbar-link').removeClass('active');
      $('.navbar-link[data-link="immobilier"').addClass('active');
    });
  </script>
<% end %>
