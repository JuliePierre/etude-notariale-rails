<!-- Introduction -->
<div class="page-section">
  <div class="row">
    <div class="col s6">
      <div class="section-heading-content">
        <span class="line-title section-line-title"></span>
        <span class="section-subtitle">Get in touch</span>
        <h2>Contact us</h2>
        <div class="section-description">
          <p>Créé en 2000, l'office notarial Perraut Pirioux Mevel est animé par le souci d'offrir à ses clients un service juridique de qualité. L'équipe est composée de trois notaires et d'une vingtaine de collaborateurs : juristes, assistants, notaires stagiaires et collaborateurs dédiés à des fonctions spécifiques.</p>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Introduction -->

<div class="container">
  <br>
  <br>
  <div class="row contact-content">
    <div class="contact-left-side">
      <div id="map"></div>
    </div>
    <div class="contact-right-side">
      <p class="underlined">Office notarial</p>
      <p>Loïc PERRAUT, Jean-Charles PIRIOUX et Céline MÉVEL</p>
      <p>
        7 rue de la Visitation
        CS 60808
        35108 RENNES CEDEX 3
      </p>
      <p>Tél : 02 99 67 39 39</p>
      <p>Fax : 02 99 67 34 54</p>
      <p>perraut-pirioux-mevel@notaires.fr</p>
    </div>
  </div>
  <!-- The map will be drawn in this div -->

  <div class="personnalized-contact-form">
    <%= render 'shared/contact-form', contact: @contact %>
  </div>
</div>

<% content_for(:after_js) do %>
  <script type="text/javascript">
    $(document).on('ready', function() {
      console.log('toto');
      var handler = Gmaps.build('Google');
      handler.buildMap({ provider: { scrollwheel: false }, internal: { id: 'map' } }, function(){
         markers = handler.addMarkers([
            {
              "lat": 48.114403,
              "lng": -1.678775,
              "infowindow": "<h1>Office Perraut - Pirioux - Meve</h1>"
            }
          ]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(14);
      });
    });
  </script>
  <script>
    $(document).ready(function(){
      $('.navbar-link').removeClass('active');
      $('.navbar-link[data-link="contact"').addClass('active');
    });
  </script>
<% end %>
