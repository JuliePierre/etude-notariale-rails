<div class="page-section">
  <div class="page-expertise-section" id="fiches">
    <h2 class="section-white-header">FICHES PRATIQUES</h2>
    <div class="fiches-pratiques-container">
      <div class="row">
        <%= render 'shared/download-document-card', document: "fiche-bien-donner-savoir-recevoir.pdf", document_type: "Fiche conseil", document_title: "Bien donner - Savoir recevoir" %>
        <%= render 'shared/download-document-card', document: "fiche-gratifier-en-deux-temps.pdf", document_type: "Fiche conseil", document_title: "Gratifiez en deux temps" %>
        <%= render 'shared/download-document-card', document: "fiche-donation-partage-famille-recomposee.pdf", document_type: "Fiche conseil", document_title: "Pour une famille recomposée" %>
