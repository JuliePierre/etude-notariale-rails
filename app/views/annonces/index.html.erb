<!-- Bannière -->
<div class="page-banner" id="annonces-banner">
  <div class="banner-header" id="annonces-banner-header">
    <span class="banner-title"></span>
    <h1>Nos annonces<br>immobilières</h1>
  </div>
</div>
<!-- Bannière -->

<!-- Sous-navigation -->
<div class="sub-nav">
  <div class="sub-nav-container">
    <div class="sub-nav-menu">
      <span class="sub-nav-item"><%= link_to 'Accueil', root_path %></span>
      <i class="fa fa-chevron-right" aria-hidden="true"></i>
      <span class="sub-nav-item"><%= link_to 'Négociation immobilière', negociation_path %></span>
      <i class="fa fa-chevron-right" aria-hidden="true"></i>
      <span class="sub-nav-item">Acheter</span>
    </div>
  </div>
</div>
<!-- Sous-navigation -->

<!-- Les annonces -->
<div class="page-section">
  <div class="annonces-container">
    <% @annonces.each do |annonce| %>
      <div class="annonces-carte-annonce">
        <%= image_tag annonce.photo %>
        <h3><%= annonce.genre %> - <%= pluralize annonce.nb_pieces, 'pièce' %></h3>
        <span><%= annonce.prix_total.to_i %>€</span>
        <p><%= annonce.ville %> <%= annonce.code_postal %></p>
        <%= link_to '', annonce_path(annonce), class: 'carte-link' %>
      </div>
    <% end %>
  </div>
</div>
<!-- Les annonces -->
