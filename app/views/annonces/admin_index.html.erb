<!-- Bannière -->
<div class="page-banner" id="admin-index-banner">
  <div class="page-banner-header right header-red">
    <span class="page-banner-subtitle">Votre plateforme d'annonces</span>
    <h1><%= pluralize @annonces.length, 'annonce' %></h1>
  </div>
</div>
<!-- Bannière -->

<!-- Sous-navigation -->
<div class="sub-nav">
  <div class="sub-nav-container">
    <div class="sub-nav-menu">
      <span class="sub-nav-item">Les annonces</span>
    </div>
  </div>
</div>
<!-- Sous-navigation -->

<!-- Les annonces -->
<div class="page-section">
  <div class="annonces-container">
    <% @annonces.each do |annonce| %>
      <div class="annonces-carte-annonce">
        <%= cl_image_tag annonce.photos[0].path %>
        <h3><%= annonce.genre %> - <%= pluralize annonce.nb_pieces, 'pièce' %></h3>
        <span><%= annonce.prix_total.to_i %>€</span>
        <p><%= annonce.ville %> <%= annonce.code_postal %></p>
        <%= link_to '', annonce_path(annonce), class: 'carte-link' %>
      </div>
    <% end %>
  </div>
</div>
<!-- Les annonces -->

<!-- Sous-navigation -->
<div class="sub-nav">
  <div class="sub-nav-container">
    <div class="sub-nav-menu">
      <span class="sub-nav-item">Créer une nouvelle annonce</span>
    </div>
  </div>
</div>
<!-- Sous-navigation -->

<div class="page-section text-center">
  <a class="modal-trigger waves-effect waves-light btn btn-primary" href="#modal-nouvelle-annonce">Créer nouvelle annonce</a>
  <!-- Modal Nouvelle annonce -->
  <div id="modal-nouvelle-annonce" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h2>Nouvelle annonce</h2>
      <%= render 'shared/annonce-form', annonce: @annonce %>
    </div>
    <div class="modal-footer">
      <a href="#" class="modal-action modal-close waves-effect waves-green btn">Fermer</a>
    </div>
  </div>
</div>
