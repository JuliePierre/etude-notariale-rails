<%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
  <div class="row">
    <div class="col s12 m6">
      <%= f.input :nom, :required => true, placeholder: 'Votre nom' %>
    </div>
    <div class="col s12 m6">
      <%= f.input :email, :required => true, placeholder: 'Votre email' %>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m6">
      <%= f.input :telephone, placeholder: 'Votre numÃ©ro' %>
    </div>
    <div class="col s12 m6">
      <div class="input-field col">
        <select>
          <option value="" disabled selected>Motif de demande</option>
          <option value="1">Option 1</option>
          <option value="2">Option 2</option>
          <option value="3">Option 3</option>
        </select>
        <label>Materialize Select</label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <%= f.input :message, :as => :text, :required => true, placeholder: 'Posez ici votre question' %>
    </div>
  </div>
  <div class= "hidden">
    <%= f.input :nickname, :hint => 'Laissez ce champ vide pour test' %>
  </div>
  <div class="homepage-contact-button">
    <%= f.button :submit, 'Envoyer ma demande', :class=> "btn btn-primary btn-contact-form" %>
  </div>
<% end %>
