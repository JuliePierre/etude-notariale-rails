<!-- Bannière -->
<div class="page-landing-picture" id="search-landing-picture">
  <div class="page-landing-picture-header left">
    <span class="page-landing-picture-subtitle">Votre recherche</span>
    <h1>"<%= @search %>"</h1>
  </div>
</div>
<!-- Bannière -->

<!-- Subnavigation -->
<div class="sub-nav">
  <div class="sub-nav-container">
    <div class="sub-nav-menu">
      <span class="sub-nav-item"><%= link_to 'Accueil', root_path %></span>
      <i class="fa fa-chevron-right" aria-hidden="true"></i>
      <span class="sub-nav-item">Résultats de recherche</span>
    </div>
  </div>
</div>
<!-- Subnavigation -->

<!-- Résultats de recherche -->
<div class="page-section">

  <!-- Expertise -->
  <p class="result-sub-label"><%= pluralize @expertises.size, "expertise" %></p>
    <% @expertises.each do |expertise| %>
    <div class="search-answer-container">
      <div class="search-answer">
        <h2><%= expertise.nom %></h2>
        <span class="line-title"></span>
        <p><%= expertise.description.html_safe %></p>
      </div>
      <% lien = expertise.motcle %>
      <%= link_to "Consulter la page", send("#{lien}_path"), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <!-- Questions -->
  <p class="result-sub-label"><%= pluralize @questions.size, "question" %> en lien avec cette recherche</p>
  <% @questions.each do |question| %>
    <div class="search-answer-container">
      <div class="search-answer">
        <h3><%= question.description.html_safe %></h3>
        <span class="line-title"></span>
        <p><%= question.reponse.html_safe %></p>
      </div>
      <% lien = question.expertise.motcle %>
      <%= link_to "Consulter la page", send("#{lien}_path"), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <!-- Questions -->
  <p class="result-sub-label"><%= pluralize @definitions.size, "définition" %> en lien avec cette recherche</p>
  <% @definitions.each do |definition| %>
    <div class="search-answer-container">
      <div class="search-answer">
        <h3><%= definition.nom %></h3>
        <span class="line-title"></span>
        <p><%= definition.definition %></p>
      </div>
      <% lien = definition.expertise.motcle %>
      <%= link_to "Consulter la page #{definition.expertise.nom}", send("#{lien}_path"), class: 'btn btn-primary' %>
    </div>
  <% end %>

</div>
<!-- Résultats de recherche -->
